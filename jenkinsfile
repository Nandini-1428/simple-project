    agent any

    stages {
        stage("builds"){
            steps {
                echo 'building the application'
            }
        }

        stage("test"){
            steps {
                echo 'testing the application'
            }
        }
        stage("deploy"){
            steps {
                echo "deploying the application"
            }
        }
        stage("sucess"){
            steps {
                echo "Applicatio succesfully deployed"
            }
        }
    }
}